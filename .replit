modules = ["python-3.11"]

[nix]
channel = "stable-24_05"
packages = ["rustup"]

[workflows]
runButton = "Luma Test Run"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "LumaSetup"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "run_luma_setup"

[[workflows.workflow]]
name = "LumaSetup"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python setup_luma_structure.py"

[[workflows.workflow]]
name = "run_luma_setup"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python setup_luma_structure.py"

[[workflows.workflow]]
name = "Luma Test"
mode = "sequential"
author = 14355119

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd /home/runner/workspace/Luma"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cargo test"

[[workflows.workflow]]
name = "Luma Repl"
mode = "sequential"
author = 14355119

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cargo run -- --repl"

[[workflows.workflow]]
name = "Luma Test Run"
author = 14355119
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cargo test --manifest-path=Luma/Cargo.toml"

[deployment]
run = ["sh", "-c", "python setup_luma_structure.py"]
